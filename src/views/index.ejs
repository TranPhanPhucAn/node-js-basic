<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>
<body>
    <!-- <h1>Hello world from</h1> -->
    <!-- <img src="/image/nodebasic.jpg"/> -->
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/Upload">Upload file</a>
        <!-- <a href="#contact">Contact</a>
        <a href="#about">About</a> -->
    </div>
    
    <div>
        <!-- <h2>Top Navigation Example</h2> -->
        <!-- <h2>List users:</h2> -->
        <!-- <p>Some content..</p> -->
        <!-- <%=dataUser%> -->
        <div class="w3-container">
            <h2>List users Table</h2>
        
            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- <tr>
                        <td>Jill</td>
                        <td>Smith</td>
                        <td>50</td>
                    </tr> -->
                    <% for(let i=0; i<dataUser.length; i++){%>
                        <tr>
                            <td><%= dataUser[i].id%></td>
                            <td><%= dataUser[i].firstName %></td>
                            <td><%= dataUser[i].lastName %></td>
                            <td>
                                
                                <button type="button">
                                    <a href="/detail/user/<%= dataUser[i].id%>" target="_blank">Detail</a>
                                </button>
                                <form action="/edit-user/<%= dataUser[i].id%>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-user" method="POST">
                                    <input type="text" hidden value="<%= dataUser[i].id%>" name="userId">
                                <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>

                    <%}%>
                </tbody>
                
                
            </table>
        </div>
        <div class="create-user-container">
            <div>Create user:</div>
            <form action="/create-new-user" method="POST">
                <div class="fName">
                    <label for="">First Name:</label>
                    <input type="text" name="firstName">
                </div>
                <div class="lName">
                    <label for="">Last Name:</label>
                    <input type="text" name="lastName">
                </div>
                <div class="Email">
                    <label for="">Email:</label>
                    <input type="email" name="email">
                </div>
                <div class="Address">
                    <label for="">Address</label>
                    <input type="text" name="address">
                </div>
                <div><button type="submit" class="btn-button">Submit</button></div>
            </form>
        </div>
    </div>

</body>
</html>